---
import Container from "@components/Container.astro";

---

<Container>
<!-- Icon Blocks -->
<div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto justify-items-center">

     <!-- Title -->
     <div class="mx-auto mb-8 max-w-2xl text-center lg:mb-14">
        <h2 class="text-gray-800 dark:text-gray-200 text-3xl font-bold lg:text-4xl">Get in touch with us</h2>
        <p class="text-gray-800 dark:text-gray-200 mt-3">
            Let us know how we doing and how we can improve our services in order to better give care to our comunity.
        </p>
      </div>
      <!-- End Title -->


    <div class="mx-auto grid max-w-3xl items-center justify-center gap-3">
      <!-- Card -->
      <a class="group rounded-3xl border border-primary-900/10 dark:border-primary-300/10 p-6 shadow-lg flex gap-y-6 w-full h-full max-w-xs transition-all justify-center hover:bg-primary-300 dark:hover:bg-white/[.075]" href="/contact">
        <div class="flex flex-col justify-center items-center">
            <div class="bg-gray-50 border-gray-200 dark:bg-gray-800 dark:border-gray-700 mx-auto flex h-14 w-14 mb-3 items-center justify-center rounded-full border">
            <svg class="w-7 h-7 text-gray-800 dark:text-gray-200" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M5 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
              </svg>
            </div>
          <div>
            <h3 class="block font-bold text-gray-800 dark:text-white">Contact Us</h3>
            <p class="text-gray-600 dark:text-gray-400 max-w-xs">Send us a message.</p>
          </div>
  
          <p class="mt-3 inline-flex items-baseline gap-x-2 text-sm font-semibold text-gray-800 dark:text-gray-200">
            Go now
            <svg class="w-2.5 h-2.5 transition ease-in-out group-hover:translate-x-1" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M0.975821 6.92249C0.43689 6.92249 -3.50468e-07 7.34222 -3.27835e-07 7.85999C-3.05203e-07 8.37775 0.43689 8.79749 0.975821 8.79749L12.7694 8.79748L7.60447 13.7596C7.22339 14.1257 7.22339 14.7193 7.60447 15.0854C7.98555 15.4515 8.60341 15.4515 8.98449 15.0854L15.6427 8.68862C16.1191 8.23098 16.1191 7.48899 15.6427 7.03134L8.98449 0.634573C8.60341 0.268455 7.98555 0.268456 7.60447 0.634573C7.22339 1.00069 7.22339 1.59428 7.60447 1.9604L12.7694 6.92248L0.975821 6.92249Z" fill="currentColor"/>
            </svg>
          </p>
        </div>
      </a>
      <!-- End Card -->
    </div>
</div>
  <!-- End Icon Blocks -->

</Container>